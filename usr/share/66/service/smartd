[main]
@type = longrun
@description = "SMART Disk Monitoring daemon"
@version = 0.0.2 
@user = ( root )

[start]
@execute = ( execl-cmdline -s { smartd ${cmd_args} } )

[environment]
# -d does not fork and sends logs to stdout, -n does not fork
# for more information, see the man page.
cmd_args=! -d
