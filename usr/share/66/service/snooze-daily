[main]
@type = classic
@version = 0.0.2
@description = "snooze-daily daemon"
@user = ( root )

[start]
@build = custom
@execute = (#!/bin/sh
	exec 2>&1
	execl-toc -d /var/cache/snooze
	exec snooze -s 1d -t /var/cache/snooze/daily -- sh -c \
	"test -d /etc/cron.daily && run-parts --lsbsysinit /etc/cron.daily; : > /var/cache/snooze/daily"
  )

