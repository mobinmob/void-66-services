[main]
@type = classic
@version = 0.0.2
@description = "snooze-hourly daemon"
@user = ( root )

[start]
@build = custom
@execute = (#!/bin/sh
	exec 2>&1
	execl-toc -d /var/cache/snooze
	exec snooze -H \* -s 1h -t /var/cache/snooze/hourly -- sh -c \
	"test -d /etc/cron.hourly && run-parts --lsbsysinit /etc/cron.hourly; : > /var/cache/snooze/hourly"
  )

