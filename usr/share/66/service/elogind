[main]
@type = longrun
@version = @VERSION@
@description = "elogind daemon"
@user = ( root )
@options = ( log env )
@extdepends = ( dbus )

[start]
@execute = (
  if {
    foreground { execl-toc -X -m /sys/fs/cgroup/elogind -t cgroup -o none,name=elogind -d cgroup }
    foreground { execl-toc -X -m /run/systemd -t tmpfs -o nosuid,nodev,noexec,mode=0755 -d none }
    foreground { execl-toc -X -m /run/user -t tmpfs -o nosuid,nodev,noexec,mode=0755 -d none }
  }
  /usr/libexec/elogind/elogind
)

[stop]
@execute = ( s6-rmrf ${pid_file} )

[environment]
pid_file=!/run/elogind.pid
