[main]
@type = classic
@version = @VERSION@
@description = "metalog daemon"
@user = ( root )
@options = ( log )

[start]
@execute = ( metalog -v −−pidfile=/run/metalog.pid )

[stop]
@execute = (
	foreground {
		redirfd -r 0 ${pid_name}
		forstdin -d"\n" -- pid
		importas -ui pid pid
		kill -TERM ${pid}
	}
	s6-rmrf ${pid_name}
)
