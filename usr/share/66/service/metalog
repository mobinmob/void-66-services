[main]
@type = classic
@version = @VERSION@
@description = "metalog daemon"
@user = ( root )
@options = ( log env )

[start]
@execute = ( execl-cmdline -s { metalog -v −−pidfile=${pid_name} } )

[stop]
@execute = (
	foreground {
		redirfd -r 0 ${pid_name}
		forstdin -d"\n" -- pid
		importas -ui pid pid
		kill -TERM ${pid}
	}
	s6-rmrf ${pid_name}
)

[environment]
pid_name=!/run/metalog.pid
